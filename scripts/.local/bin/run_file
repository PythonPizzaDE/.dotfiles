#!/bin/env bash

extension="$(echo $1 | tr '.' '\n' | tail -1)"

case "$extension" in
    "py")
        command="python $1"
        ;;

    "rs")
        command="cargo run"
        ;;

    *)
        echo "unknown file ending with .$extension"
        exit 1
        ;;
esac

tmux neww "bash -c \"$command && read -rsp \$'Press any key to continue...\n' -n1 key\""
